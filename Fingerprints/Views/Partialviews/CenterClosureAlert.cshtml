<style>
    .education-content-desc1 p {
     background: #f2dede;
    border: 1px solid #ebccd1;
    padding: 12px 15px;
    color: #a94442;
    text-align: center;
    font-size: 18px;
    margin: 0;
    /* font-weight: bold; */
    }
</style>

@{
    List<FingerprintsModel.ClosedInfo> infoList = new List<FingerprintsModel.ClosedInfo>();

    FingerprintsModel.StaffDetails staffDetails = Fingerprints.Common.FactoryInstance.Instance.CreateInstance<FingerprintsModel.StaffDetails>();

    infoList = Fingerprints.Utilities.Helper.CheckForTodayClosure(staffDetails);
}


@if (infoList != null && infoList.Count() > 0)
{






    <div class="alert alert-danger alert-dismissible fade in  col-xs-10" id="agencyClosedDiv" style="margin-top:25px;line-height:2;left:8%;">
   

            <div class="col-xs-11">




                @foreach (var info in infoList)
                {
                    if (info.ClosedToday > 0)
                    {


                        if (info.ClosedToday == 1)
                        {
                            <div id="agency-closed-info" class="col-xs-12">
                                <strong>Agency has been closed today</strong>
                            </div>

                            break;
                        }
                        else if (info.ClosedToday == 2)
                        {
                            <div id="agency-closed-info" class="col-xs-12">
                                <strong>Center Agency <span>@info.CenterName</span> has been closed today</strong>
                            </div>

                        }

                        else
                        {

                            <div id="agency-closed-info" class="col-xs-12">
                                <strong>Center @info.CenterName  Classroom - <span>@info.ClassRoomName</span> has been closed today</strong>
                            </div>


                        }
                    }
                }
            </div>
            
            <div class="col-xs-1" style="top:-15px;">
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
      
        </div>



        
        }
