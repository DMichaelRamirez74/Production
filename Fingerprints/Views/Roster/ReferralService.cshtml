@model FingerprintsModel.ReferralServiceModel
@{
    ViewBag.Title = "Referral Service";
    Layout = "~/Views/Shared/AgencyStaffLayout.cshtml";
    var clientid = string.Empty;

    ViewData["ScreeningReferralYakkr"]= ViewBag.ScreeningReferralYakkr;
}

@section Title
{
    Referral Service
    
    }


@section MainContentHolder{

    <style>
                .refer_serv_btn {
                    width: 100%;
                    float: left;
                    text-align: center;
                    margin-top: 50px;
                }

                    .refer_serv_btn span {
                        display: inline-block;
                        float: none;
                    }

                .ref_serv {
                    margin-top: 32px;
                }

                    .ref_serv h2 {
                        padding: 10px 0;
                        color: #295b8f;
                        font-size: 30px !important;
                        text-transform: capitalize !important;
                        margin-top: 33px;
                        font-weight: normal;
                        border-bottom: 1px solid #295b8f;
                        font-family: arial,sans-serif !important;
                    }
                    .modal-width-change{width:350px;margin:auto;}
                    .close:focus{outline:none;}
                    .no-padding{padding:0;}
                    .ht-scroll{height:330px;overflow:auto;}
                    .btn-primary {
            color: #fff;
            background-color: #295b8f;
            border-color: #295b8f;
            border-radius: 0;
        }
    </style>
    <div class="col-xs-12">

    </div>
    <input type="hidden" value="@Model.ClientName" id="clientName" />
    <input type="hidden" value="@Model._EncClientId" id="id" />
    <input type="hidden" value="@Model.referralserviceList.Count" id="refernceCount" />

    <div class="col-xs-12">
       
        @* Renders Referral Services Partial View *@

        <div class="col-xs-12">

            @{


                Html.RenderPartial("~/views/Partialviews/Referral/_ReferralServicePartial.cshtml", Model, viewData: new ViewDataDictionary { { "ScreeningReferralYakkr", ViewBag.ScreeningReferralYakkr } });
            }
        </div>


        @* End *@
    </div>

    <!----------------------------------Delete PopUp-------------------------------->

    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content modal-width-change">
                <div class="modal-header" style="border-bottom:none;margin-bottom:0;">
                    <button type="button" class="close" data-dismiss="modal" style="opacity:1;">
                        <img src="~/Images/error.png" />
                    </button>
                    <h4 class="modal-title">Do you want to delete this record?</h4>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default DeleteService">Yes</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                </div>
            </div>

        </div>
    </div>
    <!-------------------------------END PopUp----------------------------------------------->

    <script src="~/Scripts/Referral/ReferralService.js"></script>

}


