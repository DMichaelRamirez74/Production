@model FingerprintsModel.SubstituteRole









<div class="panel with-nav-tabs panel-primary col-xs-12">

    <div class="panel-heading panelul col-xs-12">
        <ul id="myTab" class="nav nav-tabs navtabs1 col-xs-12">

            @{

                var centerIDList = Model.SubsituteRoleList != null ? Model.SubsituteRoleList.Select(x => x.CenterID).Distinct().ToList() : new List<string>();
                var centerList = new List<SelectListItem>();

                foreach (var item in centerIDList)
                {
                    centerList.Add(new SelectListItem
                    {

                        Text = Model.SubsituteRoleList.Where(x => x.CenterID == item).Select(x => x.CenterName).First(),
                        Value = item
                    });
                }


            }

            @if (centerList != null && centerList.Count() > 0)
            {
                int i = 0;
                do
                {

                    if (i == 0)
                    {
                        <li class="active"><a href="@string.Concat("#",i.ToString(),"tab")" accesskey="@centerList[i].Value" data-toggle="tab" aria-expanded="true">@centerList[i].Text</a></li>
                    }
                    else
                    {

                        <li><a href="@string.Concat("#",i.ToString(),"tab")" accesskey="@centerList[i].Value" data-toggle="tab" aria-expanded="true">@centerList[i].Text</a></li>
                    }

                    i++;



                } while (i < centerList.Count());


            }

        </ul>

    </div>



    <div id="myTabContent" class="col-xs-12 tab-content">

        @if (centerList != null && centerList.Count > 0)
        {



            for (int j = 0; j < centerList.Count; j++)
            {

                var substituteRoleList = Model.SubsituteRoleList.Where(x => x.CenterID == centerList[j].Value).ToList();

                if (substituteRoleList.Count > 0)
                {

                    <div class="@if (j == 0) {<text>tab-pane fade active in col-xs-12</text>} else { <text>tab-pane fade col-xs-12</text> }" id="@string.Concat(j.ToString(),"tab")">

                        <div class="col-xs-12">


                            <div class="col-xs-12 search-block-main">
                                <div class="glossy-search-block col-md-12">
                                    <input type="text" autocomplete="new-text" onfocus="this.removeAttribute('readonly');" onblur="this.setAttribute('readonly','readonly');" readonly placeholder="@Fingerprints.LocalResource.Resources.Search @Fingerprints.LocalResource.Resources.Classroom, Staff..." id="searchReportText" class="form-control" value="@Model.SearchTerm">
                                    <div class="glossy-search-btn-div">
                                        <button id="btnSearchauto">@Fingerprints.LocalResource.Resources.Search</button>
                                    </div>
                                </div>
                                <div class="col-lg-4">


                                    <table class="col-md-12 table-striped total-details-table table-back-shadow">
                                        <tr>
                                            <td><label>@Fingerprints.LocalResource.Resources.TotalRecords</label></td>
                                            <td id="totalCountSpan_@j">@substituteRoleList.Where(x => x.TotalRecord > 0).Select(x => x.TotalRecord).FirstOrDefault()</td>
                                        </tr>
                                    </table>
                                </div>
                            </div>  

                            @Html.Hidden("sortOrder_" + j + "", Model.SortOrder)
                            @Html.Hidden("sortColumn_" + j + "", Model.SortColumn)
                            @Html.Hidden("requestedPage_" + j + "", 1)
                            @Html.Hidden("startIndex" + j + "", 0)
                            @Html.Hidden("lastIndex_" + j + "", 1)
                            @Html.Hidden("pageSize_" + j + "", 10)
                            @Html.Hidden("pageLoadedFirst_" + j + "", 0)
                            @Html.Hidden("numOfPages", 0)

                            <div class="col-xs-12" id="div-table_@j">

                                @{
                                    Html.RenderPartial("~/Views/AgencyUser/_SubstituteRoleTable.cshtml", substituteRoleList);
                                }
                            </div>


                        </div>

                        <!----Pagination Section---->

                        <div class="col-xs-12" id="div-pagination-@j" style="margin-top:20px;">
                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12 pagination-file">
                                <div class="pages_display">
                                    <ul>
                                        <li style="color:#1d5381;">@Fingerprints.LocalResource.Resources.Display</li>
                                        <li>
                                            <select id="ddlpagetodisplay_@j">
                                                <option value="10" selected="selected">10</option>
                                                <option value="20">20</option>
                                                <option value="30">30</option>
                                                <option value="50">50</option>
                                                <option value="100">100</option>
                                            </select>
                                        </li>
                                        <li style="color:#1d5381;">@Fingerprints.LocalResource.Resources.RecordsPerPage</li>
                                    </ul>
                                    <div class="clear"></div>
                                </div>
                            </div>
                            <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
                                <div id="divPaging_@j" class="pagination_wrp">
                                    <ul id="ulPaging_@j" class="pagination">
                                        <li>
                                            <a href="javascript:void(0);" id="First_@j" disabled>
                                                <i class="fa fa-angle-double-left" aria-hidden="true" style="margin:auto;padding:-7px;"></i>
                                            </a>
                                        </li>
                                        <li title="Back">

                                            <a href="javascript:void(0);" id="Back_@j" disabled>
                                                <i class="fa fa-angle-left" aria-hidden="true" style="margin:auto;padding:-7px;"></i>
                                            </a>

                                        </li>
                                        <li title="Select">
                                            <select class="select_cl" id="ddlpaging_@j"></select>
                                        </li>
                                        <li title="Next">
                                            <a href="javascript:void(0);" id="Next_@j" disabled>
                                                <i class="fa fa-angle-right" aria-hidden="true" style="margin:auto;padding:-7px;"></i>
                                            </a>
                                        </li>
                                        <li title="Last">
                                            <a href="javascript:void(0);" id="Last_@j" disabled>
                                                <i class="fa fa-angle-double-right" aria-hidden="true" style="margin:auto;padding:-7px;"></i>
                                            </a>
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>

                    </div>








                                        }





                                    }



                                }

                                else
                                {
            <div class="col-xs-12"><label class="text-center">Search by Filter <sup style="color:red;">*</sup></label></div>
        }



    </div>

</div>









