@{
    ViewBag.Title = "Acronym";
    Layout = (Session["AgencyId"] != null) ? "~/Views/Shared/AgencyAdminLayout.cshtml" : "~/Views/Shared/SuperAdminLayout.cshtml";
}

@section Script{

    <style type="text/css" media="screen">
        .editableBox {
            width: 75px;
            height: 30px;
        }

        a:hover {
            text-decoration: none;
        }

        .editableBox option {
            padding-left: 5px;
        }

        .timeTextBox {
            position: relative;
            width: 54px;
            height: 18px;
            border: none;
            padding-left: 5px;
            top: 1px;
            left: 1px;
            outline: none;
        }



        .select-editable {
            position: relative;
            background-color: white;
            border: solid grey 1px;
            width: 120px;
            height: 18px;
        }

            .select-editable select {
                position: absolute;
                top: 0px;
                left: 0px;
                font-size: 14px;
                border: none;
                width: 120px;
                margin: 0;
            }

            .select-editable input {
                position: absolute;
                top: 0px;
                left: 0px;
                width: 100px;
                padding: 1px;
                font-size: 12px;
                border: none;
            }

                .select-editable select:focus, .select-editable input:focus {
                    outline: none;
                }

        .page-header {
            margin-top: 50px !important;
        }

        .test {
    counter-increment: section;
    content: counter(section) " ";
}

    </style>

<script src="~/Scripts/Matrix/Acronym.js"></script>
   
}
@section MainContentHolder{
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">
                <span>Acronym Details</span>
            </h2>
        </div>
    </div>
    <div class="row">

        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 adddivspace" style="padding:0;">
            <div class="col-sm-3">
                <label>Acronym Name</label>
                <input id="acronymValue" type="text" maxlength="5" style="height: 38px !important;" class="form-control" />

            </div>
            <div style="padding-top: 23px;">
                <button id="btnSave" type="button" class="my-btn1" style="width: 108px !important;" >Save</button>
            </div>
        </div>

        <div class="col-xs-12" style="margin-top:10px;">
            <label style="width:auto;display:inline-block;float:left;padding-right:10px;">Acronym:</label>
            <span style="width:auto;display:inline-block;float:left;padding-right:10px;padding-top:10px;" id="spanAcronym"></span>
        </div>
    </div>

}
