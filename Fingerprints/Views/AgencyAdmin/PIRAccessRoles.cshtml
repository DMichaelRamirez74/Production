@model IEnumerable<FingerprintsModel.PIRAccessRoles>

@{
    ViewBag.Title = "PIRAccesRoles";
    Layout = "~/Views/Shared/AgencyAdminLayout.cshtml";

}


@section MainContentHolder
{
    <script>
        function isRolesChecked() {
            var isValid = true;
            if ($('#pirfilltable').find('input[type=checkbox]:checked').length === 0) {
                customAlert('Please select Roles');
                isValid = false;
            }
            return isValid;
        }

        $(function () {

            if ('@ViewBag.Message' != "") {
                customAlert('@ViewBag.Message');
            }
        });


    </script>

    <form method="post" enctype="multipart/form-data" role="form" id="form2" autocomplete="off">
        <div class="row">
            <div class="col-lg-12">
                <h2 class="page-header">
                    <span>PIR Access Roles</span>
                    <span class="view-btn backto_listspan" id="BackToList">
                        <button type="submit" class="my-btn1" onclick="return isRolesChecked();" name="Command">Submit</button>
                        @*<input type="button" id="Testbtn" class="my-btn1"  value="Submit"/>*@
                    </span>
                </h2>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 table-main">
                <div class="table-responsive coreteam" id="piraccessTeam">
                    <table class="table table_size" id="pirfilltable">
                        <thead style="cursor:pointer;">
                            <tr>
                                <th>Staff Role</th>
                                <th style="width:32%;">Show PIR</th>
                            </tr>
                        </thead>
                        <tbody>

                            @if (Model.Count() > 0)
                            {
                                int i = 0;

                                foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            <input type="hidden" name="PIRAccessRoles[@i].RoleId" value="@item.RoleId">

                                            <span name="PIRAccessRoles[@i].RoleName">@item.RoleName</span>
                                        </td>
                                        <td style="text-align:center;">

                                            <input type="checkbox"
                                                   @if (@item.IsAccessPIR) { <text> checked="checked" </text>  } name="PIRAccessRoles[@i].IsAccessPIR" value="true" />
                                        </td>
                                    </tr>

                                    i++;
                                }
                            }

                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    </form>



}