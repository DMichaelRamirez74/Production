@{
    ViewBag.Title = "AnnualAssessment";
    Layout = (Session["AgencyId"] != null) ? "~/Views/Shared/AgencyAdminLayout.cshtml" : "~/Views/Shared/SuperAdminLayout.cshtml";
}


@section Script{

    <style type="text/css" media="screen">
        .editableBox {
            width: 75px;
            height: 30px;
        }

            .editableBox option {
                padding-left: 5px;
            }

        .timeTextBox {
            position: relative;
            width: 54px;
            height: 18px;
            border: none;
            padding-left: 5px;
            top: 1px;
            left: 1px;
            outline: none;
        }



        .select-editable {
            position: relative;
            background-color: white;
            border: solid grey 1px;
            width: 120px;
            height: 18px;
        }

            .select-editable select {
                position: absolute;
                top: 0px;
                left: 0px;
                font-size: 14px;
                border: none;
                width: 120px;
                margin: 0;
            }

            .select-editable input {
                position: absolute;
                top: 0px;
                left: 0px;
                width: 100px;
                padding: 1px;
                font-size: 12px;
                border: none;
            }

                .select-editable select:focus, .select-editable input:focus {
                    outline: none;
                }

        .assessment1-date-bdr tr th, .assessment1-date-bdr tr td {
            border: 1px solid #ddd !important;
        }
    </style>
  
<script src="~/Scripts/Matrix/AnnualAssessment.js"></script>
}
@section MainContentHolder{
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">
                <span>Annual Assessment</span>
            </h2>
        </div>
    </div>


    <div class="col-lg-12">
        <label style="width:auto;display:inline-block;float:left;padding-right:10px;">Admin Name:</label>
        <span style="width:auto;display:inline-block;float:left;padding-right:10px;padding-top:10px;" id="agencyName">Agency Name</span>

    </div>
    <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 adddivspace" style="padding:0;margin-top:15px;">

        <div class="col-xs-12" style="margin-bottom:20px;">
            <label class="radio-inline" style="display:inline-block;float:left;width:auto;padding-right:10px;">
                <input type="radio" name="assesmentradio" data-text="One Assessment" value="1">One Assessment
            </label>

            <label class="radio-inline" style="margin:0;display:inline-block;float:left;width:auto;padding-right:10px;">
                <input type="radio" name="assesmentradio" data-text="Two Assessments" value="2">Two Assessments
            </label>

            <label class="radio-inline" style="margin:0;display:inline-block;float:left;width:auto;padding-right:10px;">
                <input type="radio" name="assesmentradio" data-text="Three Assessments" value="3">Three Assessments
            </label>

        </div>


        <div class="col-xs-12">

            <table class="assessment1-date hidden assessment1-date-bdr">
                <caption style="text-align: center;margin-bottom: 12px;font-size: 18px;font-weight: bold;color: #295b8f;"> Date Range</caption>
                <tr style="height: 50px;background: #295b8f;padding: 10px;color: #fff;">
                    <th style="padding:5px;">Assessment Type</th>
                    <th>From Date</th>
                    <th>To Date</th>
                </tr>
                <tr class="assessment1-date hidden">
                    <td>
                        <label style="width:auto;display:inline-block;float:left;padding:10px;">Assessment 1:</label>
                    </td>
                    <td>
                        <span style="width:auto;display:inline-block;float:left;padding:10px;">
                            <input type="text" id="assessment1Fromdate" maxlength="10" placeholder="From Date" class="form-control datepicker" style="height: 38px !important;" />
                        </span>
                    </td>
                    <td>
                        <span style="width:auto;display:inline-block;float:left;padding:10px;">
                            <input type="text" id="assessment1Todate" maxlength="10" placeholder="To Date" class="form-control datepicker" style="height: 38px !important;" />
                        </span>
                    </td>
                </tr>
                <tr class="assessment2-date hidden">
                    <td>
                        <label style="width:auto;display:inline-block;float:left;padding:10px;">Assessment 2:</label>
                    </td>
                    <td>
                        <span style="width:auto;display:inline-block;float:left;padding:10px;">
                            <input type="text" id="assessment2Fromdate" maxlength="10" placeholder="From Date" class="form-control datepicker" style="height: 38px !important;" />
                        </span>
                    </td>
                    <td>
                        <span style="width:auto;display:inline-block;float:left;padding:10px;">
                            <input type="text" id="assessment2Todate" maxlength="10" placeholder="To Date" class="form-control datepicker" style="height: 38px !important;" />
                        </span>
                    </td>
                </tr>
                <tr class="assessment3-date hidden">
                    <td>
                        <label style="width:auto;display:inline-block;float:left;padding:10px;">Assessment 3:</label>
                    </td>
                    <td>
                        <span style="width:auto;display:inline-block;float:left;padding:10px;">
                            <input type="text" id="assessment3Fromdate" maxlength="10" placeholder="From Date" class="form-control datepicker" style="height: 38px !important;" />
                        </span>
                    </td>
                    <td>
                        <span style="width:auto;display:inline-block;float:left;padding:10px;">
                            <input type="text" id="assessment3Todate" maxlength="10" placeholder="To Date" class="form-control datepicker" style="height: 38px !important;" />
                        </span>
                    </td>
                </tr>
            </table>
        </div>

        <div style="padding-top: 20px;padding-bottom:20px;width:505px;" class="center-block col-xs-12 text-center">
            <button id="btnadd" type="button" class="my-btn1" style="width: 108px !important;" assessment-id="0">Save</button>
        </div>
        <div class="col-xs-12" style="margin-top:20px;">
            <label style="width:auto;display:inline-block;float:left;padding-right:10px;">Assessment Name:</label>
            <span style="width:auto;display:inline-block;float:left;padding-right:10px;padding-top:10px;" id="assessmentName"></span>
        </div>
    </div>

}