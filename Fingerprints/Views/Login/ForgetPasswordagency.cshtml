    <script type="text/javascript">
        $(document).ready(function () {
            $('input').keypress(function () {
                if ($(this).val() == 'MM/DD/YYYY') {
                    $(this).val('');
                    // $(this).mask("99/99/9999", { placeholder: 'MM/DD/YYYY' });
                }
            });
            if ('@ViewBag.message' != '')
                customAlert('@ViewBag.message');
            $('#btnexit').click(function () {
                window.location.href = HostedDir + "/Login/Loginagency";
            });


            $('#btnsend').click(function () {
                cleanValidation();
                var isValid = true;
                if ($("#ForgetPassword")[0].value.trim() == "") {
                    customAlert("Please enter email id.");
                    plainValidation('#ForgetPassword');
                    isValid = false;
                }
                else
                    if (!validateEmail($('#ForgetPassword')[0].value)) {
                        customAlert("Please enter valid email id.");
                        plainValidation('#ForgetPassword');
                        isValid = false;
                    }
                return isValid;
            })
        });
    </script>
