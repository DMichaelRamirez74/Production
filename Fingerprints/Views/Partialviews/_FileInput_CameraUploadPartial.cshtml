<script type="text/javascript">

   
    var videoElementSingle;
    var videoSelectsingle;
    var constraintsSingle;
    var front = true;
    var screenshotButtonSingle;
    var imgSingle;
    var videoSingle;
    var canvasSingle;
    var currentStreamSingleUpload;

    $(function () {


         videoElementSingle = document.querySelector('.camera-file-modal video');
         videoSelectsingle = document.querySelector('.camera-file-modal select#videoSource');
         constraintsSingle = {};
       


         screenshotButtonSingle = document.querySelector('.camera-file-modal #anchor-capture');
         imgSingle = document.querySelector('.camera-file-modal #setup-camera-div #capt-img');
         videoSingle = document.querySelector('.camera-file-modal #setup-camera-div video');



         videoSingle.setAttribute('autoplay', '');
         videoSingle.setAttribute('muted', '');
         videoSingle.setAttribute('playsinline', '');

         canvasSingle = document.createElement('canvas');


         screenshotButtonSingle.onclick = videoSingle.onclick = function () {

             canvasSingle.width = videoSingle.videoWidth;
             canvasSingle.height = videoSingle.videoHeight;
             canvasSingle.getContext('2d').drawImage(videoSingle, 0, 0);

             imgSingle.src = canvasSingle.toDataURL('image/png');

         };
         videoSelectsingle.addEventListener('change', function (event) {
             debugger;
             getStreamSingleUpload();
         });

       navigator.mediaDevices.enumerateDevices().then(gotDevicesSingleUpload);

    });


  
    function handleSuccessSingle(stream) {
        screenshotButtonSingle.disabled = false;
        videoSingle.srcObject = stream;
    }

    function stopMediaTracksSingle(stream) {
        
        stream.getTracks().forEach(function (track) { track.stop(); })

    }








  

    function stopMediaTracksSingleUpload(stream) {
        stream.getTracks().forEach(function (track) {
            track.stop();
        });
    }

    function gotDevicesSingleUpload(mediaDevices) {
        videoSelectsingle.innerHTML = '';
        var count = 1;
        mediaDevices.forEach(function (mediaDevice) {
            if (mediaDevice.kind === 'videoinput') {
                const option = document.createElement('option');
                option.value = mediaDevice.deviceId;
                const label = mediaDevice.label || 'Camera ' + (count++) + '';
                const textNode = document.createTextNode(label);
                option.appendChild(textNode);
                videoSelectsingle.appendChild(option);
            }
        });


      



    }

    function getStreamSingleUpload() {
        
        if (typeof currentStreamSingleUpload !== 'undefined') {
            stopMediaTracksSingleUpload(currentStreamSingleUpload);
        }
        const videoConstraintsSingle = {};
        if (videoSelectsingle.value === '') {
            videoConstraintsSingle.facingMode = 'environment';
        } else {
            videoConstraintsSingle.deviceId = { exact: videoSelectsingle.value };
        }
        const constraintsSingle = {
            video: videoConstraintsSingle,
            audio: false
        };
        navigator.mediaDevices
          .getUserMedia(constraintsSingle)
          .then(function (stream) {
              
              currentStreamSingleUpload = stream;
              videoElementSingle.srcObject = stream;
              return navigator.mediaDevices.enumerateDevices();
          })
          .then(gotDevicesSingleUpload)
          .catch(function (error) {
              console.error(error);
          });
    }





    function showCameraOptionforSingleUpload(ele) {
        var videoInputAvailable = 0;
        navigator.mediaDevices.enumerateDevices().then(function (devices) {

            console.log(devices);
            devices.forEach(function (device) {

                if (device.kind == 'videoinput') {
                    videoInputAvailable++;
                }

            });


            if (videoInputAvailable == 0) {
                $('.camera-file-modal #divcapimage').hide();

                $(".camera-file-modal #divcamnotfound").show();
            }
            else {
                $('.camera-file-modal #divcamnotfound').hide();

                $(".camera-file-modal #divcapimage").show();
            }

        }).catch(function (err) {
            console.log(err.name + ": " + err.message);
        });


        if (videoSelectsingle.options.length > 0) {
            getStreamSingleUpload();
        }




    }


   

</script>