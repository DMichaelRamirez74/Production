@{
    ViewBag.Title = "MatrixType";
    Layout = (Session["AgencyId"] != null) ? "~/Views/Shared/AgencyAdminLayout.cshtml" : "~/Views/Shared/SuperAdminLayout.cshtml";
    //Layout = "~/Views/Shared/SuperAdminLayout.cshtml";
}


@section Script{

    <style type="text/css" media="screen">
        .editableBox {
            width: 75px;
            height: 30px;
        }
        a:hover{text-decoration:none;}
            .editableBox option {
                padding-left: 5px;
            }

        .timeTextBox {
            position: relative;
            width: 54px;
            height: 18px;
            border: none;
            padding-left: 5px;
            top: 1px;
            left: 1px;
            outline: none;
        }



        .select-editable {
            position: relative;
            background-color: white;
            border: solid grey 1px;
            width: 120px;
            height: 18px;
        }

            .select-editable select {
                position: absolute;
                top: 0px;
                left: 0px;
                font-size: 14px;
                border: none;
                width: 120px;
                margin: 0;
            }

            .select-editable input {
                position: absolute;
                top: 0px;
                left: 0px;
                width: 100px;
                padding: 1px;
                font-size: 12px;
                border: none;
            }

                .select-editable select:focus, .select-editable input:focus {
                    outline: none;
                }
                .page-header{margin-top:50px!important;}

                .sort-color{
                    color: rgba(240, 248, 255, 0.28);
                }
    </style>

<script src="~/Scripts/Matrix/MatrixType.js"></script>
}
@section MainContentHolder{
    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">
                <span>Matrix Type</span>
            </h2>
        </div>
    </div>
    <div class="row">

        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 adddivspace" style="padding:0;">
            <div class="col-sm-3">
                <label>Matrix Value</label>
                <input id="matrixValue"  type="text" style="height: 38px !important;" class="form-control"/>
                
            </div>
            <div class="col-sm-3">
                <label>Matrix Type</label>
                <input id="matrixType" type="text" style="height: 38px !important;" class="form-control"/>
                
            </div>
            <div style="padding-top: 23px;">
                <button id="btnadd" type="button" class="my-btn1" style="width: 108px !important;" onclick="AddMatrixTypeDetails();">Add</button>
                <button id="btnUpdate" type="button" class="my-btn1 hidden" style="width: 108px !important;">Update</button>
                <button id="btnclear" class="my-btn" onclick="cleargrid();">Cancel</button>
            </div>

        </div>
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12 table-main">
            <div class="table-responsive">
                <table class="table table_size" id="matrixTypeTable">
                    <thead style="cursor: pointer;">
                        <tr>
                            <th id="MatrixValue">
                                Code
                                <img id="imgthIN" style="visibility: hidden" />
                                <input type="hidden" id="directionNA" value="Asc" />
                                <i class="fa fa-sort"></i>
                            </th>
                          
                            <th id="MatrixType">
                                Type<img id="imgthCust" style="visibility: hidden" />
                                <input type="hidden" id="directionNA" value="Asc" />
                                <i class="fa fa-sort"></i>
                            </th>
                        
                            <th id="thSN">Action</th>
                        </tr>
                    </thead>
                    <tbody></tbody>
                </table>
                <div id="div1" style="text-align: center; display: none;">
                <label>No result found.</label>
            </div>
        </div>
    </div>
</div>
<div class="row">

    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12 pagination-file">
        <div class="pages_display">
            <ul>
                <li>Display</li>
                <li>
                    <select id="ddlpagetodisplay" onchange="drawgrid();">
                        <option value="10" selected="selected">10</option>
                        <option value="25">25</option>
                        <option value="50">50</option>
                        <option value="100">100</option>
                    </select>
                </li>
                <li>Records Per Page</li>
            </ul>
            <div class="clear"></div>
        </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
        <div id="divPaging" class="pagination_wrp">
            <ul id="ulPaging" class="pagination">
                <li>
                    <input id='First' type='image' src="~/Images/previousarrow.png" style="cursor: pointer;" onclick="fnChangePage('First'); return false;" />
                </li>
                <li title="Back">
                    <input id='Back' type='image' src="~/Images/prevarrow.png" style='cursor: pointer;' onclick="fnChangePage('Back'); return false;" />
                </li>
                <li title="Select">
                    <select class="select_cl" id="ddlpaging"></select>
                </li>
                <li title="Next">
                    <input id='Next' type='image' src="~/Images/nextarrow1.png" style='cursor: pointer;' onclick="fnChangePage('Next'); return false;" />
                </li>
                <li title="Last">
                    <input id='Last' type='image' src="~/Images/nextarrow.png" style='cursor: pointer;' onclick="fnChangePage('Last'); return false;" />
                </li>
            </ul>
        </div>
    </div>
</div>

}