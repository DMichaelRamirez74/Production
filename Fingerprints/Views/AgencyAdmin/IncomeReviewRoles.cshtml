                <div id="DivForRoles">


                    <form method="post" enctype="multipart/form-data" role="form" id="incomeReviewForm" autocomplete="off">
                        <div class="col-xs-12 col-lg-12 col-md-12">
                            <div class="icc_partsys">

                                <div class="col-xs-12">
                                    <div class="transition-analysis-btn" style="text-align:right;margin-bottom:10px;">
                                        <button style="cursor:pointer;" onclick="return isIncomRolesChecked()" type="submit">Submit</button>
                                        <a style="background:#e74c3c;cursor:pointer;" href="javascript:void(0);" id="btnExitIncome">Exit</a>
                                    </div>
                                </div>


                                <div class="col-xs-12" style="background:#163b69;padding:0;float:left;width:100%;padding:0px 0;border:1px solid #ddd;border-top: 0;">
                                    <div class="col-xs-8" style="padding: 10px;">
                                        <label class="lable-txt">STAFF ROLE</label>
                                    </div>
                                    <div class="col-xs-4" style="padding:10px;">
                                        <label class="lable-txt">REVIEW INCOME</label>
                                    </div>
                                </div>

                                <div class="col-xs-12" style="padding:0;float:left;width:100%;padding:0px 0;height:auto;overflow:auto;background:#fff;" id="incomeReviewDiv">
                                    @if (Model.Count() > 0)
                            {
                                int i = 0;

                                foreach (var item in Model)
                                {
                                <div class="col-xs-12" style="padding:0;float:left;width:100%;padding:0px 0;border:1px solid #ddd;">
                                    <div class="col-xs-8" style="border-right:1px solid #ddd;padding: 10px;text-align: left;">
                                        <label class="text-label" name="IncomeReviewRoles[@i].RoleName">@item.RoleName</label>
                                        <input type="hidden" name="IncomeReviewRoles[@i].RoleName" value="@item.RoleName"/>
                                    </div>
                                    <div class="col-xs-4" style="padding: 10px;">
                                        <div class="col-xs-12 chk-box-ch">
                                            <div class="fa-checkbox">
                                                <input type="hidden" name="IncomeReviewRoles[@i].RoleId" value="@item.RoleId">
                                                <input type="checkbox" id="checkbox[@i]"
                                                       @if (@item.IsReviewIncome ||@item.RoleId==new Guid("94cdf8a2-8d81-4b80-a2c6-cdbdc5894b6d")) { <text> checked="checked" </text>       } name="IncomeReviewRoles[@i].IsReviewIncome" value="true" />
                                                <label for="checkbox[@i]" style="color:black;font-size:14px;text-align:center;margin-bottom:12px;margin-bottom: 0;width: 100%;padding-top: 0;"></label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                    i++;
                                }
                            }


                                </div>



                            </div>

                        </div>
                      
                    </form>
