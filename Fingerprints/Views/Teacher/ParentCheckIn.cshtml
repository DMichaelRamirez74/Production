                $.each($inkindPeriods,function(){

                    if( new Date(enteredDate).setHours(0,0,0,0) >= new Date($(this)[0].StartDate).setHours(0,0,0,0)
                        && new Date(enteredDate).setHours(0,0,0,0)<=new Date($(this)[0].EndDate).setHours(0,0,0,0))
                    {
                        $isAllowed=true;
                        return $isAllowed;
                    }



                });

                return $isAllowed;

            }
            else
            {
                $isAllowed=true;
                return $isAllowed;
            }




        }


