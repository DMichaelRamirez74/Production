    </style>


    <script>
        function isIncomRolesChecked() {
            var isValid = true;
            if ($('#incomeReviewDiv').find('input[type=checkbox]:checked').length === 0) {
                customAlert('please check Role(s), to review income');
                isValid = false;
            }
            return isValid;
        }

        $(function () {

            if ('@ViewBag.Message' != "") {
                customAlert('@ViewBag.Message');
            }

            $('#btnExitIncome').on('click', function () {
                $('#spinner').show();
                
                var url = HostedDir + '/Home/AgencyAdminDashboard';
                window.location.href = url;
            });

        });


    </script>


    <div class="container-fluid">
        <div class="row">
            <div class="col-xs-12 no-padding tran_system" style="margin-bottom: 30px;">
